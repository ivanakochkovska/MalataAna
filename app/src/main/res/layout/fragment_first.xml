<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".FirstFragment">

    <ImageView
        android:id="@+id/home_id"
        android:layout_width="125dp"
        android:layout_height="105dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/sound_fear"
        android:layout_width="353dp"
        android:layout_height="157dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/sound_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fear_1"
        android:layout_width="327dp"
        android:layout_height="186dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/fear_ana"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sound_fear" />

    <ImageView
        android:id="@+id/fear_2"
        android:layout_width="327dp"
        android:layout_height="186dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/fear_boy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fear_1" />
</androidx.constraintlayout.widget.ConstraintLayout>
