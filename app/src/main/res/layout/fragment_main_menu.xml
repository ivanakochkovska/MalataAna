<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu"
    tools:context=".MainMenuFragment" >

    <ImageView
        android:id="@+id/sound_main_menu"
        android:layout_width="200dp"
        android:layout_height="149dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="48dp"
        android:src="@drawable/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/border_1"
        android:layout_width="102dp"
        android:layout_height="109dp"
        android:src="@drawable/listen_fear_final"
        app:layout_constraintBottom_toBottomOf="@+id/sound_main_menu"
        app:layout_constraintEnd_toEndOf="@+id/sound_main_menu"
        app:layout_constraintStart_toStartOf="@+id/sound_main_menu"
        app:layout_constraintTop_toTopOf="@+id/sound_main_menu" />

    <ImageView
        android:id="@+id/menu_learn"
        android:layout_width="209dp"
        android:layout_height="167dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/border"
        app:layout_constraintBottom_toTopOf="@+id/menu_quiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/menu_quiz"
        android:layout_width="210dp"
        android:layout_height="167dp"
        android:layout_marginBottom="52dp"
        android:src="@drawable/border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/border_2"
        android:layout_width="162dp"
        android:layout_height="104dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/learn"
        app:layout_constraintEnd_toEndOf="@+id/menu_learn"
        app:layout_constraintHorizontal_bias="0.898"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/menu_learn" />

    <ImageView
        android:id="@+id/border_3"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:src="@drawable/quiz"
        app:layout_constraintBottom_toBottomOf="@+id/menu_quiz"
        app:layout_constraintEnd_toEndOf="@+id/menu_quiz"
        app:layout_constraintStart_toStartOf="@+id/menu_quiz"
        app:layout_constraintTop_toTopOf="@+id/menu_quiz" />
</androidx.constraintlayout.widget.ConstraintLayout>